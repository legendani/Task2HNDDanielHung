<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="90dp"
    tools:context="com.example.alumnodanielhung.task2hnddanielhung.fragments.PerfilFragment">

    <TextView android:id="@+id/txtusuariofragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <ImageView android:id="@+id/imgPerfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"/>

    <TextView android:id="@+id/txtNombrefragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textAlignment="center"
        android:textSize="15dp"/>

    <TextView android:id="@+id/txtApellidosfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellidos"
        android:textSize="15dp"
        android:textAlignment="center"/>

    <TextView android:id="@+id/txtEmailfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15dp"
        android:textAlignment="center"/>

    <Button android:id="@+id/btnEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editar"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>
